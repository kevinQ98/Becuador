<% layout('layouts/boilerplateDashboard') %>
<div class="row">
  <div class="col-12">
    <div class="card border shadow-xs mb-4">
      <div class="card-header border-bottom pb-0">
        <%- include('../partials/companies/flash.ejs') %>
        <div class="d-sm-flex align-items-center">
          <div>
            <h6 class="font-weight-bold text-lg mb-0">Nuevo Usuario</h6>
            <p class="text-sm">Ingresa los datos del nuevo usuario!</p>
          </div>
          <div class="ms-auto d-flex"></div>
        </div>
      </div>
      <div class="card-body">
        <form
          class="needs-validation"
          action="/companies/<%= company.id_company %>/sellers"
          method="post"
          novalidate
          role="form text-left"
        >
          <div class="row">
            <div class="col-md-6">
              <label for="username">Nombre de usuario</label>
              <div class="mb-3">
                <input
                  type="text"
                  class="form-control"
                  placeholder="Introduzca un nombre de usuario"
                  id="username"
                  name="username"
                  required
                />
              </div>
            </div>
            <div class="col-md-6">
              <label for="email">Correo electrónico</label>
              <div class="mb-3">
                <input
                  type="email"
                  class="form-control"
                  placeholder="Introduzca su dirección de correo electrónico"
                  id="email"
                  name="email"
                  required
                />
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-6">
              <label for="password">Contraseña</label>
              <div class="mb-3">
                <input
                  type="password"
                  class="form-control"
                  placeholder="Crea una contraseña"
                  id="password"
                  name="password"
                  required
                />
              </div>
            </div>
            <div class="col-md-6">
              <label for="password2">Confirmar Contraseña</label>
              <div class="mb-3">
                <input
                  type="password"
                  class="form-control"
                  placeholder="Confirmar contraseña"
                  id="password2"
                  name="password2"
                  required
                />
              </div>
            </div>
          </div>
          <div class="text-center">
            <button
              type="submit"
              class="btn btn-dark btn-rounded w-100 mt-2 mb-0"
            >
              Registrar
            </button>
            <a
              href="/companies/<%= company.id_company %>/sellers"
              role="button"
              class="btn btn-white btn-rounded w-100 mt-1 mb-1"
            >
              Cancelar
            </a>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<hr class="my-0" />
